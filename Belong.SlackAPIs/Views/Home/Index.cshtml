@model Belong.SlackAPIs.Models.API.ChannelModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h3 class="display-4">Slack Channels</h3>
</div>

<div class="container">
    <div class="shadow-sm overflow-auto m-2">
        <table class="table">
            <thead>
                <tr>
                    <th width="15%">Channel Id</th>
                    <th>Name</th>
                    <th width="20%">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.ok)
                {
                    foreach (var c in Model.channels)
                    {
                        <tr>
                            <td>@c.id</td>
                            <td>#@c.name</td>
                            <td>
                                <a href="/Home/History?channelId=@c.id&channelName=@c.name" class="btn btn-sm btn-primary" title="Join Channel">
                                    History
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
